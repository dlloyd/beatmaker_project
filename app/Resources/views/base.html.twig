
<!DOCTYPE html>
<html lang="fr">
<head>
<title>{% block title %}  Site Bolero {% endblock %} </title>
<meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css')}}" />         
  <!-- boostrap -->

  <link rel="stylesheet" href="{{ asset('css/animate.css')}}" />
  <link rel="stylesheet" href="{{ asset('css/style.css')}}" />
  


</head>
<body>
{% block body %}

<!-- Header Starts -->
<div class="navbar-wrapper ">
      <div class="container">

        <div class="navbar navbar-inverse navbar-fixed-top fadeInDown" role="navigation" id="top-nav">
          <div class="container">
            <div class="navbar-header">
              <!-- Logo Starts -->
              <a class="navbar-brand" href="home"><img src="{{ asset('images/logo.png')}}" height="30" alt="logo"/></a>
              <!-- Logo Ends -->


              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>

            </div>


           <!-- Nav Starts -->
           {% set cPath = path(app.request.attributes.get('_route'),
                           app.request.attributes.get('_route_params')) %}
            <div class="navbar-collapse  collapse">
              <ul class="nav navbar-nav navbar-right" >
                 
             {% if cPath == path('bo_beat_homepage') %} <li class="active"> {% else %} <li> {% endif %}<a href="{{ path('bo_beat_homepage') }}">Home</a></li>

              <li><a href="{{ path('bo_beat_beatpage') }}">Beats </a> </li> 

              {% if cPath == path('bo_beat_contactpage') %} <li class="active"> {% else %} <li> {% endif %}<a href="{{ path('bo_beat_contactpage') }}">Contact</a></li>

              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              <li><a href="{{ path('bo_shop_homepage') }}"> My purchases </a></li>
              <li><a href="{{ path('fos_user_security_logout') }}"> Logout </a></li>

              {% else %}
              
              {% if cPath == path('fos_user_security_login') %} <li class="active"> {% else %} <li> {% endif %}<a href="{{ path('fos_user_security_login') }}"> Login </a></li>
              {% endif %}

              {% if cPath == path('bo_shop_cart') %} <li class="active"> {% else %} <li> {% endif %}<a href="{{ path('bo_shop_cart') }}"> <span class="glyphicon glyphicon-shopping-cart"></span></a></li>
             
              </ul>
            </div>
            <!-- Nav Ends -->

          </div>
        </div>

      </div>
    </div>


    <br>
<br>
<div class="container overlay">

<div id="home" class="homeinfo">
<div class="row">
  <div class="col-sm-6 col-xs-12">
  <div class="fronttext">
    <h2 class="bgcolor  animated fadeInUpBig"><span class="glyphicon glyphicon-headphones"></span> DJ Bolerus </h2><br>
    
  </div>
  </div>  

{% block beat_body %}
{% endblock %}
</div>
</div> 



<!-- Footer Starts -->
<div id="footer">
<div class="container">
Copyright 2014 DJ KRANKS.
</div>
</div>
<!-- # Footer Ends -->

{% endblock %}


{% block javascript %}
  <script src="http://code.jquery.com/jquery-1.7.1.min.js" type="text/javascript" ></script>
  <!-- boostrap -->
  <script src="{{ asset('bootstrap/js/bootstrap.js')}}" type="text/javascript" ></script>
  <script src="{{ asset('scripts/plugins.js')}}" type="text/javascript"></script>
  <script src="{{ asset('scripts/script.js')}}" type="text/javascript"></script>
 {% endblock %}


</body>

</html>

